mesh:
  type: LineMesh
  nx: 2
  xmax: 2

functions:
  exact_fn:
    type: ParsedFunction
    function: 't + x*x'

problem:
  type: HeatEquationProblem
  p_order: 2
  start_time: 0
  end_time: 1
  dt: 0.5

ics:
  all:
    type: FunctionIC
    value: 'exact_fn(t,x,y,z)'

auxs:
  q_ppp:
    type: FunctionAuxiliaryField
    value: '-1'

bcs:
  left:
    type: DirichletBC
    boundary: 'left'
    value: [ 'exact_fn(t,x,y,z)' ]
    value_t: [ '1' ]

  right:
    type: DirichletBC
    boundary: 'right'
    value: [ 'exact_fn(t,x,y,z)' ]
    value_t: [ '1' ]

pps:
  l2_err:
    type: L2Diff
    value: 'exact_fn(t,x,y,z)'

output:
  exo:
    type: ExodusIIOutput
    on: ['initial', 'final']
    variables: ['l2_err']
