mesh:
  type: RectangleMesh
  nx: 2
  ny: 2

problem:
  type: HeatEquationProblem
  start_time: 0
  end_time: 0.1
  dt: 0.01

ics:
  all:
    type: ConstantIC
    value: [ 300 ]

bcs:
  left:
    type: DirichletBC
    boundary: 'left'
    value: [ '300' ]
  right:
    type: ConvectiveHeatFluxConstBC
    boundary: 'right'
    htc: 100
    T_infinity: 400

output:
  vtk:
    type: ExodusIIOutput
    file: '2d'
