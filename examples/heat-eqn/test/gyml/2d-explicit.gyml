mesh:
  type: RectangleMesh
  nx: 4
  ny: 4

problem:
  type: HeatEquationExplicit
  order: 2
  start_time: 0
  end_time: 5e-3
  dt: 1e-3

ics:
  all:
    type: FunctionIC
    value: [ '2*t + x*x + y*y' ]

auxs:
  forcing_fn:
    type: FunctionAuxiliaryField
    value: 2

bcs:
  left:
    type: DirichletBC
    boundary: 'left'
    value: '2*t + x*x + y*y'

  right:
    type: DirichletBC
    boundary: 'right'
    value: '2*t + x*x + y*y'

  top:
    type: DirichletBC
    boundary: 'top'
    value: '2*t + x*x + y*y'

  bottom:
    type: DirichletBC
    boundary: 'bottom'
    value: '2*t + x*x + y*y'

pps:
  l2_error:
    type: L2Diff
    value: '2*t + x*x + y*y'

output:
  vtk:
    type: ExodusIIOutput
    file: '2d-explicit'
    on: ['initial', 'final']
    variables: 'temp'
